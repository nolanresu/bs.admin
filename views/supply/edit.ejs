<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= title %></title>
    <link href="../../assets/vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="../../assets/vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="../../assets/vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="../../assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../../assets/vendor/datatables/datatables.min.css" rel="stylesheet">
    <link href="../../assets/css/master.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar" class="active">
            <div class="sidebar-header">
                <img src="../../assets/img/bootstraper-logo.png" alt="bootraper logo" class="app-logo">
            </div>
            <ul class="list-unstyled components text-secondary">
                <li>
                    <a href="/"><i class="fas fa-home"></i> Dashboard</a>
                </li>
                <li>
                    <a href="/equipment"><i class="fas fa-file-alt"></i> Equipment</a>
                </li>
                <li>
                    <a href="/supply"><i class="fas fa-table"></i> Supply</a>
                </li>
            </ul>
        </nav>
        <div id="body" class="active">
            <nav class="navbar navbar-expand-lg navbar-white bg-white">
                <button type="button" id="sidebarCollapse" class="btn btn-light"><i class="fas fa-bars"></i><span></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <div class="nav-dropdown">
                                <a href="" class="nav-item nav-link dropdown-toggle text-secondary" data-toggle="dropdown"><i class="fas fa-link"></i> <span>Quick Links</span> <i style="font-size: .8em;" class="fas fa-caret-down"></i></a>
                                <div class="dropdown-menu dropdown-menu-right nav-link-menu">
                                    <ul class="nav-list">
                                        <li><a href="" class="dropdown-item"><i class="fas fa-list"></i> Access Logs</a></li>
                                        <div class="dropdown-divider"></div>
                                        <li><a href="" class="dropdown-item"><i class="fas fa-database"></i> Back ups</a></li>
                                        <div class="dropdown-divider"></div>
                                        <li><a href="" class="dropdown-item"><i class="fas fa-cloud-download-alt"></i> Updates</a></li>
                                        <div class="dropdown-divider"></div>
                                        <li><a href="" class="dropdown-item"><i class="fas fa-user-shield"></i> Roles</a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <div class="nav-dropdown">
                                <a href="" class="nav-item nav-link dropdown-toggle text-secondary" data-toggle="dropdown"><i class="fas fa-user-shield"></i> <span><%= user %></span> <i style="font-size: .8em;" class="fas fa-caret-down"></i></a>
                                <div class="dropdown-menu dropdown-menu-right nav-link-menu">
                                    <ul class="nav-list">
                                        <li><a href="" class="dropdown-item"><i class="fas fa-address-card"></i> Profile</a></li>
                                        <li><a href="" class="dropdown-item"><i class="fas fa-envelope"></i> Messages</a></li>
                                        <li><a href="" class="dropdown-item"><i class="fas fa-cog"></i> Settings</a></li>
                                        <div class="dropdown-divider"></div>
                                        <li><a href="" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="content">
                <div class="container">
                    <% if (messages.success) { %>
                    <div class="alert alert-success" role="alert"><%- messages.success %></div>
                    <% } %>
                    <% if (messages.error) { %>
                    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
                    <% } %>
                            <div class="page-title">
                                <h3>Update Item
                                    <a href="/supply" class="btn btn-sm btn-outline-primary float-right"><i class="fas fa-arrow-left"></i> BACK</a>
                                </h3>
                            </div>
                            <div class="box box-primary">
                                <div class="box-body">
                                    <form class="needs-validation" action="/supply/update/<%= id %>" method="post" novalidate accept-charset="utf-8">
                                            <div class="form-group">
                                                <select class="form-control" name="category">
                                                    <option value="<%= category %>"><%= category %></option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Article:</label>
                                                <input type="text" class="form-control" name="article" value="<%= article %>" autocomplete="off" required>
                                                <small class="form-text text-muted">Enter article name.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter article name.</div>
                                            </div>
                                        <div class="form-group">
                                            <label>Description:</label>
                                            <input type="text" class="form-control" name="description" value="<%= description %>" autocomplete="off" required>
                                            <small class="form-text text-muted">Enter description.</small>
                                            <div class="valid-feedback">Looks good!</div>
                                            <div class="invalid-feedback">Please enter a description.</div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-4">
                                                <label>Unit Measure:</label>
                                                <input type="text" class="form-control" name="measure" value="<%= measure %>" autocomplete="off" required>
                                                <small class="form-text text-muted">Enter unit measure.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter a unit measure.</div>
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label>Unit Value:</label>
                                                <input type="number" step="0.01" class="form-control" name="value" value="<%= value.toFixed(2) %>" autocomplete="off" required>
                                                <small class="form-text text-muted">Enter unit price.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter a unit price.</div>
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label>Stock:</label>
                                                <input type="number" class="form-control" name="stock" value="<%= stock %>" autocomplete="off" required>
                                                <small class="form-text text-muted">Enter current stock.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter current stock.</div>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label>Balance Per Card:</label>
                                                <input type="number" class="form-control" name="balancecard" value="<%= balancecard %>" autocomplete="off" required>
                                                <small class="form-text text-muted">Enter balance per card.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter balance per card.</div>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label>On Hand Per Count:</label>
                                                <input type="number" class="form-control" name="onhandcount" value="<%= onhandcount %>" autocomplete="off" required>
                                                <small class="form-text text-muted">Enter on hand per count.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                                <div class="invalid-feedback">Please enter on hand per count.</div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Remarks:</label>
                                            <input type="text" class="form-control" name="remarks" value="<%= remarks %>" autocomplete="off">
                                            <small class="form-text text-muted">Enter item remarks.</small>
                                                <div class="valid-feedback">Looks good!</div>
                                        </div>
                                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Update</button>
                                    </form>
                                </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <script src="../../assets/vendor/jquery/jquery.min.js"></script>
    <script src="../../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../assets/vendor/datatables/datatables.min.js"></script>
    <script src="../../assets/js/initiate-datatables.js"></script>
    <script src="../../assets/js/form-validator.js"></script>
    <script src="../../assets/js/script.js"></script>
</body>
</html>